{
  "$schema": "http://json.schemastore.org/tsconfig",
  "exclude": ["**/__tests__/*", "**/dist/*"],
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
